@using System.Security.Claims;
@using YarisTakip.ViewModel
@model KullaniciDetayViewModel

<div>
    <form asp-area="" asp-controller="Kullanici" asp-action="EditKullanici" asp-route-id="@User.FindFirst(ClaimTypes.NameIdentifier).Value">
        <button class="btn btn-outline-primary">Profili Düzenle</button>
    </form>
</div>
<div class="container">

    <h1 class="my-4">
        <small>Profilim</small>
    </h1>

    <div class="row">

        <div class="col-md-8">
            <img class="img-fluid" src="@Model.ProfilResimURL" alt="">
        </div>

        <div class="col-md-4">
            <h3 class="my-3">@Model.KullaniciAdi</h3>
            <h3>Mesafe</h3>
            <h3 class="my-3">@Model.Mesafe</h3>
            <h3>Koşu Hızı</h3>
            <h3 class ="my-3">@Model.KosuHizi</h3>
        </div>

    </div>
</div>