@using System.Security.Claims;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] YarisTakip</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/YarisTakip.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Yaris" asp-action="Index">YarisTakip</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <form asp-area="" asp-controller="Kullanici" asp-action="Profil" asp-route-id="@User.FindFirst(ClaimTypes.NameIdentifier).Value">
                                    <button class="btn btn-outline-primary">Profil</button>
                                </form>
                            </li>
                            @if (User.Identity.IsAuthenticated && User.IsInRole("kullanici"))
                            {
                                <li class="nav-item">
                                    <form asp-area="" asp-controller="KullaniciYarisi" asp-action="Index" asp-route-id="@User.FindFirst(ClaimTypes.NameIdentifier).Value">
                                        <button class="btn btn-outline-primary">Yarışlarım</button>
                                    </form>
                                </li>
                            }
                            @if (User.Identity.IsAuthenticated && User.IsInRole("admin"))
                            {
                                <li class="nav-item">
                                    <form asp-area="" asp-controller="Admin" asp-action="Yarislar">
                                        <button class="btn btn-outline-primary">Admin</button>
                                    </form>
                                </li>
                            }
                            <li class="nav-item">
                                <form asp-area="" asp-controller="Hesap" asp-action="Cikis">
                                    <button class="btn btn-outline-danger">Çıkış Yap</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Hesap" asp-action="Giris">Giris</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Hesap" asp-action="Kayit">Kayıt ol</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            Proje Github Linki <a href="https://github.com/halilkeklik/YarisTakip">Github Linki</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
