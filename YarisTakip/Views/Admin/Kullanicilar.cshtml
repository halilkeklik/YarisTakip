@using YarisTakip.ViewModel
@model List<KullaniciViewModel>

<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
    <div class="container-fluid">
        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
            <ul class="navbar-nav flex-grow-1"> 
                <li class="nav-item">
                    <form asp-area="" asp-controller="Admin" asp-action="Yarislar">
                        <button class="btn btn-outline-primary">Yarışlar</button>
                    </form>
                </li>
                <li class="nav-item">
                    <form asp-area="" asp-controller="Admin" asp-action="Kullanicilar">
                        <button class="btn btn-outline-primary">Kullanıcılar</button>
                    </form>
                </li>
                <li class="nav-item">
                    <form asp-area="" asp-controller="Yaris" asp-action="Create">
                        <button class="btn btn-outline-primary">Yarış Yarat</button>
                    </form>
                </li>
            </ul>
        </div>
    </div>
</nav>
<div class="album py-5 bg-light">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        <div class="card-body">
                            <p class="card-text">@item.KullaniciAdi</p>
                            <div><div>Mesafe</div> <p class="card-text">@item.Mesafe</p></div>
                            <div><div>Kosu Hızı</div> <p class="card-text">@item.KosuHizi</p> </div>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a type="btn btn-success" asp-controller="Kullanici" asp-action="Profil" asp-route-id="@item.Id"
                                        class="btn btn-outline-secondary">Görüntüle</a>
                                </div>
                                <div class="btn-group">
                                    <a type="btn btn-success" asp-controller="Admin" asp-action="EditKullanici" asp-route-id="@item.Id"
                                        class="btn btn-outline-secondary">Düzenle</a>
                                </div>
                                    <div class="btn-group">
                                    <a type="btn btn-success" asp-controller="KullaniciSilmeAPI" asp-action="Delete" asp-route-id="@item.Id"
                                   class="btn btn-danger">Sil</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>